          <tr>
            <td>Sex: <br /></td>
            <td width="15%"><%= form.radio_button :sex,'M' %> Male </td>
            <td width="42%"><%= form.radio_button :sex,'F' %>Female  
            <span style="color:red;font-size:15px;">*</span></td>
          </tr>
          <tr>
            <td>Height: <br/></td>
            <td colspan="2"><%= form.text_field :height,:size=>5 %>cms</td>
          </tr>
          <tr>
            <td>Weight: <br/></td>
            <td colspan="2"><%= form.text_field :weight,:size=>5 %>kgs</td>
          </tr>
          <tr>
            <td>Birth Address: <br/></td>
            <td colspan="2"><%= form.text_field :birth_address %></td>
          </tr>
          <tr>
