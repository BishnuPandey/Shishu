<script>
function fillparentinfo(id)
{

 if(document.getElementById(id).checked)
 {
          document.getElementById('member_address').value=document.getElementById('user_birth_address').value;
          document.getElementById('member_country').value=document.getElementById('user_birth_country').value;
          document.getElementById('member_city').value=document.getElementById('user_birth_city').value;
 }
 else
 {
        document.getElementById('member_address').value='';
          document.getElementById('member_country').value='Nepal';
          document.getElementById('member_city').value='';
 
 }
 
}
</script>
       
<%= stylesheet_link_tag 'errors' %>
<fieldset>
    <legend>Shishu Details</legend>
        <% form_for :user  do |form| %>
        <%= error_messages_for :user %>
        <table width="53%" border="0" cellspacing="2" cellpadding="2">
           <tr>
            <td width="43%">Shishu Code : </td>
            <td colspan="2"><%= form.text_field :code,:size=>8 %> <span style="color:red;font-size:15px;">*</span></td>
          </tr>
          <tr>
            <td width="43%">Shishu Name: <br/></td>
            <td colspan="2"><%= form.text_field :fname %>  <span style="color:red;font-size:15px;">*</span></td>
          </tr>

          <tr>
            <td>Date of Birth:  <br/></td>
            <td colspan="2"><%= form.date_select :dob,:start_year =>1950,:end_year=>Time.now.year  %>
